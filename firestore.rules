rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Gallery Photos
    match /photos/{photoId} {
      allow read: if true;
      allow write: if true; 
    }
    
    // Wishes
    match /wishes/{wishId} {
      allow read: if true;
      allow write: if true;
    }
    
    // Timeline Events
    match /timeline_events/{eventId} {
      allow read: if true;
      allow write: if true;
    }

    // Moments (Folders)
    match /moments/{momentId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // App Settings
    match /settings/{settingId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Default for other collections
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
