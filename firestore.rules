rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Gallery Photos
    match /photos/{photoId} {
      allow read: if true;
      allow write: if true; 
    }
    // Wishes
    match /wishes/{wishId} {
      allow read: if true;
      allow write: if true;
    }
    // Default for other collections
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
